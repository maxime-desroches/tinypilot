added_libs = []
if arch == "Darwin":
  env["LINKFLAGS"]=["-bundle", "-undefined", "dynamic_lookup"]
elif arch == "aarch64":
  env["LINKFLAGS"]=["-shared"]

  Import("python_path")
  added_libs.append(python_path.split("/")[-1])
else:
  env["LINKFLAGS"]=["-pthread", "-shared"]

env.Cython('boardd_api_impl.cpp', 'boardd_api_impl.pyx')

env.Program('boardd_api_impl.so', 'boardd_api_impl.cpp', LIBS=["can_list_to_can_capnp", 'capnp', 'kj'] + added_libs)
